{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Lexurgy",
    "patterns": [{
            "include": "#comment"
        },
        {
            "include": "#symbol"
        }
    ],
    "repository": {
        "comment": {
            "name": "comment.line.number-sign",
            "match": "#.*\\n"
        },
        "symbol": {
            "begin": "^([Ss]ymbol) ",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.symbol.lexurgy"
                },
                "2": {
                    "name": "constant.character.symbolname.lexurgy"
                }
            },
            "patterns": [
                { "include": "#NAME" },
                { "include": "#matrix" }
            ],
            "end": "\\n"
        },
        "matrix": {
            "name": "entity.name.class",
            "begin": "\\[",
            "end": "\\]",
            "patterns": [{
                "name": "variable.language.lexurgy",
                "match": "[A-Za-z0-9]+"
            }]
        },
        "NAME": {
            "name": "constant.character.lexurgy",
            "match": "[^ \\n\\r,.=>()*\\[\\]{}+?\/\\-\\\\-_:!~$@#&]+?"
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.lexurgy",
                "match": "\\b([Ff]eature|[Cc]lass|[Ss]ymbol|[Dd]iacritic)\\b"
            }]
        }
    },
    "scopeName": "source.lexurgy"
}